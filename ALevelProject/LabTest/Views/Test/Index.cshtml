@model IEnumerable<DataLayer.Entityes.DicClient>

@{
    ViewBag.Title = "Заказы";
}

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-primary list-panel" id="list-panel">
            <div class="panel-heading list-panel-heading">
                <h1 class="panel-title list-panel-title">Заказы</h1>
            </div>
            <p>
                @Html.ActionLink("Create New", "Create")
            </p>
            <div class="panel-body">
                <table id="assets-data-table" class="table table-striped table-bordered" style="width:100%">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Surname</th>
                            <th>Secname</th>
                            <th>Gender</th>
                            <th>Age</th>
                            <th>BirthDate</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var asset in Model)
                        {
                            <tr>
                                <td>@asset.Name</td>
                                <td>@asset.Surname</td>
                                <td>@asset.Secname</td>
                                <td>@asset.Gender</td>
                                <td>@asset.Age</td>
                                <td>@asset.BirthDate</td>
                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id = @asset.ClientId }) |
                                    @Html.ActionLink("Details", "Details", new { id = @asset.ClientId }) |
                                    @Html.ActionLink("Delete", "Delete", new { id = @asset.ClientId })
                                </td>
                            </tr>

                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts
{

    <script type="text/javascript">
        $(document).ready(function () {

            $('#assets-data-table').DataTable();
        });
    </script>

}